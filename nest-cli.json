{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".args.ts",
            ".dto.ts",
            ".model.ts"
          ]
        }
      },
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".model.ts"
          ]
        }
      }
    ]
  }
}